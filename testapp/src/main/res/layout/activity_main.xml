<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activities_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Activities"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/events_behaviour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activities_title"
        android:text="events behaviour"/>

    <Button
        android:id="@+id/events_attributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events_behaviour"
        android:layout_marginTop="8dp"
        android:text="events attribute"/>

    <Button
        android:id="@+id/events_inheritance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events_attributes"
        android:layout_marginTop="8dp"
        android:text="events inheritance"/>

    <TextView
        android:id="@+id/fragments_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/events_inheritance"
        android:layout_marginTop="8dp"
        android:text="Fragments"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/fragments_events_attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragments_title"
        android:text="Events Attribute"/>

</RelativeLayout>